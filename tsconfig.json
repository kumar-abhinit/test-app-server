{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "rootDir": "./src",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "skipLibCheck": true
    }
}